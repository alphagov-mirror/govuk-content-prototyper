<% content_for :title, presented_taxon.title %>
<% content_for :page_class, "taxon-page" %>
<% content_for :meta_tags do %>
  <meta name="description" content="<%= presented_taxon.description %>">

  <meta name="govuk:navigation-page-type" content="<%= presented_taxon.rendering_type %>" />
<% end %>

<%= render partial: 'page_header', locals: { presented_taxon: presented_taxon } %>

<% content_for :breadcrumbs do %>
  <%= render partial: 'govuk_component/breadcrumbs', locals: {
    breadcrumbs: [
      { title: "Services", url: "/services"},
      { title: "Education", url: "/services/education" },
      { title: "Early years", url: "/services/education/early-years" },
      { title: "Childcare", url: "/services/education/early-years/childcare" }
    ] } %>
<% end %>
